<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.video.server.mapper.SystemNoticeMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.video.server.entity.SystemNotice">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="type" property="type"/>
        <result column="target_type" property="targetType"/>
        <result column="target_user_id" property="targetUserId"/>
        <result column="status" property="status"/>
        <result column="is_top" property="isTop"/>
        <result column="read_count" property="readCount"/>
        <result column="publish_time" property="publishTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 插入系统通知 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_notice (
            title, content, type, target_type, target_user_id, 
            status, is_top, read_count, publish_time, create_time, update_time
        ) VALUES (
            #{title}, #{content}, #{type}, #{targetType}, #{targetUserId},
            #{status}, #{isTop}, #{readCount}, #{publishTime}, #{createTime}, #{updateTime}
        )
    </insert>

    <!-- 根据ID更新系统通知 -->
    <update id="updateById">
        UPDATE sys_notice
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
            <if test="type != null">type = #{type},</if>
            <if test="targetType != null">target_type = #{targetType},</if>
            <if test="targetUserId != null">target_user_id = #{targetUserId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="isTop != null">is_top = #{isTop},</if>
            <if test="readCount != null">read_count = #{readCount},</if>
            <if test="publishTime != null">publish_time = #{publishTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 查询已发布的通知列表 -->
    <select id="selectPublishedNotices" resultMap="BaseResultMap">
        SELECT *
        FROM sys_notice
        WHERE status = 1
        <if test="targetType != null">
            AND target_type = #{targetType}
        </if>
        <if test="targetUserId != null">
            AND (target_type = 0 OR target_user_id = #{targetUserId})
        </if>
        ORDER BY is_top DESC, publish_time DESC
        <if test="limit != null and limit > 0">
            LIMIT #{limit}
        </if>
    </select>

</mapper>
